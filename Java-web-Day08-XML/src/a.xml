<!--
    标签可以包含
        字母，数字以及其他的字符
    标签
        不能包含空格，以数字开头或者标点符号开头
-->
<Users>
    <user id="1">
        <name>Terry</name>
        <age>23</age>
        <gender>male</gender>
        <br/>
    </user>
    <user id="2">
        <name>Terrance</name>
        <age>23</age>
        <gender>female</gender>
        <code>
            <!-- it will auto convert symbol -->
            if(a &lt; b &amp;&amp; a &gt; c){}
            <!-- it will be a string -->
            <![CDATA[
                if(a < b && a > c){}
            ]]>
        </code>
        <br/>
    </user>
</Users>